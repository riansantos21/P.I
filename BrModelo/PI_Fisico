CREATE TABLE Usuario (
  ID_Usuario BIGSERIAL PRIMARY KEY,
  CPF VARCHAR(11),
  Email VARCHAR(120),
  Senha VARCHAR(48),
  NomeCompleto VARCHAR(80),
  DataCadastro DATE,
  Telefone VARCHAR(13)
);
select * from Usuario

CREATE TABLE Endereco (
  ID_Endereco BIGSERIAL PRIMARY KEY,
  CEP VARCHAR(15),
  Numero INT,
  Bairro VARCHAR(20),
  Latitude VARCHAR(18),
  Longitude VARCHAR(18),
  Cidade VARCHAR(32),
  Complemento VARCHAR(10),
  Rua VARCHAR(80),
  AlturaNormalDoRio VARCHAR(10)
);

CREATE TABLE Abrigo (
  ID_abrigo BIGSERIAL PRIMARY KEY,
  Dono VARCHAR(40),
  Suprimentos VARCHAR(100),
  Capacidade INT,
  DataCadastro DATE,
  Lotacao INT,
  ID_Endereco INT NOT NULL,
  FOREIGN KEY (ID_Endereco) REFERENCES Endereco(ID_Endereco)
);

CREATE TABLE Pet (
  ID_Pet BIGSERIAL PRIMARY KEY,
  Nome VARCHAR(255),
  Raca VARCHAR(255),
  Porte VARCHAR(255),
  Peso VARCHAR(255),
  Status VARCHAR(255),
  Sexo VARCHAR(2555)
);

CREATE TABLE AreaDeRisco (
  ID_Risco BIGSERIAL PRIMARY KEY,
  Descricao VARCHAR(500),
  Nome VARCHAR(20)
);

CREATE TABLE Enchente (
  ID_Enchente BIGSERIAL PRIMARY KEY,
  Nome VARCHAR(20),
  Data DATE
);

CREATE TABLE RiscoGeralArea (
  ID_Endereco INT NOT NULL,
	ID_Risco INT NOT NULL,
  Rio_DataHora DATE,
  PRIMARY KEY (ID_Endereco, ID_Risco, Rio_DataHora),
  FOREIGN KEY (ID_Endereco) REFERENCES Endereco(ID_Endereco),
  FOREIGN KEY (ID_Risco) REFERENCES AreaDeRisco(ID_Risco)
);

CREATE TABLE Rio (
  DataHora TIMESTAMP PRIMARY KEY,
  Altura VARCHAR(10),
  Data DATE,
  Hora TIME
);



CREATE TABLE HistoricoEnchente (
  ID_Enchente INT NOT NULL,
  ID_Endereco INT NOT NULL,
  PRIMARY KEY (ID_Enchente, ID_Endereco),
  FOREIGN KEY (ID_Enchente) REFERENCES Enchente(ID_Enchente),
  FOREIGN KEY (ID_Endereco) REFERENCES Endereco(ID_Endereco)
);

CREATE TABLE Resgatar_Salva (
  NomeTutor VARCHAR(40),
  TelefoneTutor VARCHAR(13),
  LocalResgate VARCHAR(50),
  ID_Pet INT NOT NULL,
  ID_abrigo INT NOT NULL,
  FOREIGN KEY (ID_Pet) REFERENCES Pet(ID_Pet),
  FOREIGN KEY (ID_abrigo) REFERENCES Abrigo(ID_abrigo)
);

CREATE TABLE e (
  ID_Usuario INT NOT NULL,
  ID_abrigo INT NOT NULL,
  PRIMARY KEY (ID_Usuario, ID_abrigo),
  FOREIGN KEY (ID_Usuario) REFERENCES Usuario(ID_Usuario),
  FOREIGN KEY (ID_abrigo) REFERENCES Abrigo(ID_abrigo)
);



CREATE TABLE Tem (
  ID_Usuario INT NOT NULL,
  ID_Endereco INT NOT NULL,
  PRIMARY KEY (ID_Usuario, ID_Endereco),
  FOREIGN KEY (ID_Usuario) REFERENCES Usuario(ID_Usuario),
  FOREIGN KEY (ID_Endereco) REFERENCES Endereco(ID_Endereco)
	)
